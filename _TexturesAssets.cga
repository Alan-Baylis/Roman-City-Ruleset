///////START


Block(n) -->
	comp(f) {all: setupProjection(0,scope.xy,'1,'1)
			projectUV(0)
			Texture(n)}
						
Block(n,x) -->
	comp(f) {all: setupProjection(0,scope.xy,x,x)
			projectUV(0)
			Texture(n)}
			
Block(n,x,z) -->
	comp(f) {all: setupProjection(0,scope.xy,x,z)
			projectUV(0)
			Texture(n)}
			
Block(n,x,z,k) -->
	comp(f) {all: setupProjection(0,scope.xy,x,z,k)
			projectUV(0)
			Texture(n)}

Block(n,x,z,k,q) -->
	comp(f) {all: setupProjection(0,scope.xy,x,z,k,q)
			projectUV(0)
			Texture(n)}

WholeBlock(n) -->
	setupProjection(0,scope.xy,'1,'1)
	projectUV(0)
	Texture(n)
	
WholeBlock(n,x) -->
	setupProjection(0,scope.xy,x,x)
	projectUV(0)
	Texture(n)

WholeBlock(n,x,z) -->
	setupProjection(0,scope.xy,x,z)
	projectUV(0)
	Texture(n)
	
WholeBlock(n,x,z,k) -->
	setupProjection(0,scope.xy,x,z,k)
	projectUV(0)
	Texture(n)
	
WholeBlock(n,x,z,k,q) -->
	setupProjection(0,scope.xy,x,z,k,q)
	projectUV(0)
	Texture(n)
	
GroundBlock(n,x)-->
	setupProjection(0,scope.xz,x,x)
	projectUV(0)
	Texture(n)
	
GroundBlock(n,x,k)-->
	setupProjection(0,scope.xz,x,x,k)
	projectUV(0)
	Texture(n)
	

Texture(n) -->
	case n == "wall":
		set(material.name,"wall")
		texture(wallTex)
	case n == "solid_wall":
		set(material.name,"wall")
		texture(solidWallTex)
	case n == "base":
		set(material.name,"base")
		texture(baseTex)
	case n == "roof":
		set(material.name,"roof")
		texture(roofTex)
	case n == "wood": 
		//color(wood)
		set(material.name,"wood")
		texture(woodTex)
	case n == "floor": 
		set(material.name,"floor")
		texture(floorTex)
	case n == "block": 
		color(wall)
		set(material.name,"block")
		texture(blockTex)
	case n == "tallBlock":
		color(wall)
		set(material.name,"block")
		texture(tallBlockTex)
//	case n == "sand": 
//		set(material.name,"sand")
//		texture(sandTex)
	case n == "pavement": 
		set(material.name,"pavement")
		texture(pavementTex)
//	case n == "water": 
//		set(material.name,"water")
//		texture(waterTex)
	case n == "ground": 
		set(material.name,"ground")
		texture(groundTex)
	case n == "grass": 
		set(material.name,"grass")
		texture(grassTex)
//	case n == "ground_BW": 
//		set(material.name,"ground")
//		texture(groundTex)
	case n == "street": 
		set(material.name,"street")
		texture(streetTex)
	case n == "curb": 
		set(material.name,"curb")
		texture(curbTex)
	case n == "sidewalk": 
		set(material.name,"sidewalk")
		texture(sidewalkTex)
//	case n == "green": 
//		set(material.name,"green")
//		texture(greenGroundTex)
	
	else: Texture.
	
			